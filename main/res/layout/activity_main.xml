<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/loginimage1">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Civic Issue Reporter"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Horizontal Image Scroll -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/imageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/main1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:contentDescription="Image 1" />
            <ImageView
                android:id="@+id/image2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/main2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:contentDescription="Image 2" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/main3"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:contentDescription="Image 3" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/main4"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:contentDescription="Image 4" />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/main5"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:contentDescription="Image 5" />

            <ImageView
                android:id="@+id/image6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/main6"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                android:contentDescription="Image 6" />


        </LinearLayout>
    </HorizontalScrollView>

    <!-- Scrollable TextView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/scrollviewimageatmainactivity"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/imageDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="10dp"
            android:lineSpacingExtra="4dp"
         android:hint="Click image for more detail"
            android:textColorHint="#413E3E"
            android:textColor="#000000"
            android:textSize="16sp"

        />
    </ScrollView>

    <!-- Button -->
    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="10dp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white" />
</LinearLayout>
