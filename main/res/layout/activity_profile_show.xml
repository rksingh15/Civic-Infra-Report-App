<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/profilebackgroundimage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"

        android:layout_marginBottom="20dp"
        android:background="@drawable/imagestart1"
        android:fontFamily="@font/poppins"
        android:text="               User Profile"
        android:textColor="#FF5722"

        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/poppins"
                android:text="Full Name"
                android:textColor="@color/black"


                android:textStyle="bold" />

            <EditText
                android:id="@+id/PFullName"
                android:hint="Full Name"
                android:textColorHint="#A7A3A3"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/poppins"
                android:text="Phone Number"
                android:textColor="@color/black"


                android:textStyle="bold" />

            <EditText
                android:id="@+id/PPhone"
                android:hint="Phone Number"
                android:textColorHint="#A7A3A3"
                android:inputType="phone"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/poppins"
                android:text="Email"
                android:textColor="@color/black"


                android:textStyle="bold" />

            <EditText
                android:id="@+id/PEmail"
                android:hint="Email"
                android:textColorHint="#A7A3A3"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/poppins"
                android:text="Address"
                android:textColor="@color/black"


                android:textStyle="bold" />

            <EditText
                android:id="@+id/PAddress"
                android:hint="Address"
                android:textColorHint="#A7A3A3"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSave"
                android:text="Save"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_profile"
        android:contentDescription="Back" />
</LinearLayout>
